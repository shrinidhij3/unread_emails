# ====================================
# Database Configuration
# ====================================
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=railway
DB_HOST=your-db-host
DB_PORT=5432
DB_COMMAND_TIMEOUT=10

# Database Connection Pool Settings
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=5
DB_MAX_INACTIVE_CONN_LIFETIME=300
DB_MAX_QUERIES=50000
DB_TIMEOUT=10.0

# ====================================
# Application Settings
# ====================================
SECRET_KEY=generate-a-secure-secret-key-here
ENVIRONMENT=development  # development, staging, production

# ====================================
# Email Configuration (SMTP)
# ====================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password
SMTP_USE_TLS=true
SMTP_FROM_NAME="Your App Name"
SMTP_FROM_EMAIL=your-email@gmail.com

# ====================================
# IMAP Configuration
# ====================================
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_USE_SSL=true

# ====================================
# Webhook Configuration
# ====================================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-path

# ====================================
# Application Behavior
# ====================================
# Number of days to keep processed emails in the database
EMAIL_RETENTION_DAYS=30

# Email processing batch size
PROCESSING_BATCH_SIZE=50

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
